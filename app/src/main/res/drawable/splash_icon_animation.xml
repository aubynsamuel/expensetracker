<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:drawable="@drawable/ic_splash_icon">

    <!-- Receipt fade in and scale -->
    <target android:name="receipt_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:duration="780"
                    android:interpolator="@android:interpolator/fast_out_slow_in"
                    android:propertyName="scaleX"
                    android:valueFrom="0.7"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="780"
                    android:interpolator="@android:interpolator/fast_out_slow_in"
                    android:propertyName="scaleY"
                    android:valueFrom="0.7"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="520"
                    android:interpolator="@android:interpolator/fast_out_slow_in"
                    android:propertyName="alpha"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

    <!-- Coin 1 - Enter from top right with spring effect -->
    <target android:name="coin1_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <!-- Translate from top right -->
                <objectAnimator
                    android:duration="1040"
                    android:startOffset="520"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="translateX"
                    android:valueFrom="45"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1040"
                    android:startOffset="520"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="translateY"
                    android:valueFrom="-55"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <!-- Scale bounce -->
                <objectAnimator
                    android:duration="1040"
                    android:startOffset="520"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="scaleX"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1040"
                    android:startOffset="520"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="scaleY"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <!-- Fade in -->
                <objectAnimator
                    android:duration="390"
                    android:startOffset="520"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="alpha"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

    <!-- Coin 2 - Enter from top right with spring effect (delayed) -->
    <target android:name="coin2_group">
        <aapt:attr name="android:animation">
            <set android:ordering="together">
                <!-- Translate from top right -->
                <objectAnimator
                    android:duration="1170"
                    android:startOffset="715"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="translateX"
                    android:valueFrom="50"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1170"
                    android:startOffset="715"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="translateY"
                    android:valueFrom="-65"
                    android:valueTo="0"
                    android:valueType="floatType" />
                <!-- Scale bounce -->
                <objectAnimator
                    android:duration="1170"
                    android:startOffset="715"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="scaleX"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <objectAnimator
                    android:duration="1170"
                    android:startOffset="715"
                    android:interpolator="@android:interpolator/overshoot"
                    android:propertyName="scaleY"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:valueType="floatType" />
                <!-- Fade in -->
                <objectAnimator
                    android:duration="390"
                    android:startOffset="715"
                    android:interpolator="@android:interpolator/linear"
                    android:propertyName="alpha"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:valueType="floatType" />
            </set>
        </aapt:attr>
    </target>

</animated-vector>